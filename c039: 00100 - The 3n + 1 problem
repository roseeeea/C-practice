//https://zerojudge.tw/ShowProblem?problemid=c039
#include<iostream>
using namespace std;

int cl(int n){
	int length =1;
	while(n != 1){
		if(n%2 == 1){
			n= 3*n+1;
		}
		else{
			n= n/2;
		}
	length ++;
	}
	return length;
	
}

int main(){
	int i,j;
	while(cin >> i >> j ){
		if (i<= j){
			int max_cl = -1;
			for (int n=i; n<= j; n++){
				if (cl(n) > max_cl){
					max_cl = cl(n);
				}
			}
			cout << i << " " << j << " " << max_cl << endl;
		}
		else if(j < i){
			int max_cl = -1;
			for (int n=j; n<= i; n++){
				if (cl(n) > max_cl){
					max_cl = cl(n);
				}
			}
			cout << i << " " << j << " " << max_cl << endl;
		}
	}
	return 0;
	
}







