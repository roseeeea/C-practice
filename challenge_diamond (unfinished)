#include <iostream>
using namespace std;

int main() {
  int k;
  cin >> k;
  int K = k*2-3;
  int i=0;
  
  while(i <= K){
     if(i < K/2){
      for(int a=0; a<= i*2+1; a++){
        cout << "* ";
        }
      i = i+1;
      cout << endl;
    }
    else if(i >= K/2){
      for(int a=0; a<=23-2*i; a++){
        cout << "* ";
      }
     i = i+1;
      cout << endl;
    }
    
  }
  

  
  return 0;
  }
